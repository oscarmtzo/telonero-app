<head>
  <link href='https://api.mapbox.com/mapbox-gl-js/v1.0.0/mapbox-gl.css' rel='stylesheet' />

</head>
<nav class="navbar navbar-light bg-light">
  <form action="/users" method="post">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>
<div class="todo">
  <div class="mapa">
    <div class="tarjeta">
      <h2>Oh hi {{user.name}}</h2>
      <img src="{{user.profileImg}}">
    </div>
    <form action="/profile/picture" method="post" enctype="multipart/form-data">
      <label for="poster">Poster</label>
      <input type="file" name="photo" id="poster">
      <input type="submit" value="save">
    </form>
    <div id='map' style='width: 400px; height: 300px;'></div>
  </div>
  <div class="posts">
    <div class="seleccionar">
      <div class="posts">
        <a href="/profile">Posts</a>
      </div>
      <div class="artistas">
        <a href="/profile/artistas">Artistas recomendados</a>
      </div>
      <div class="musica">
        Musica
      </div>
      <div class="eventos">
        <a href="/profile/eventos">Eventos</a>
      </div>
    </div>
    <div>
      <form action="/profile/music" method="POST" enctype="multipart/form-data">
        <lable for="nombre">Ingresa el nombre tu cancion</lable>
        <input type="text" name="nombre">
        <label for="file">Ingresa un mp3 de tu musica</label>
        <input type="file" name="file" id="musca">
        <button type="submit">Post</button>
      </form>
    </div>
    {{#each music}}
    <h2>{{this.name}} </h2>
    <audio src="{{this.path}}" controls></audio>
    {{/each}}
  </div>
  <div class="reproductor">
    <iframe src="https://open.spotify.com/embed/album/1DFixLWuPkv3KT3TnV35m3" width="300" height="380" frameborder="0"
      allowtransparency="true" allow="encrypted-media"></iframe>
  </div>
</div>
<script src='https://api.mapbox.com/mapbox-gl-js/v1.0.0/mapbox-gl.js'></script>