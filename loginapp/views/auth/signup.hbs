<!--- views/auth/signup.hbs -->
<form action="/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input type="password" type="text" placeholder="Your username">
  <label for="password">Password</label>
  <input type="username" type="password" name="username" placeholder="Your password">

  {{#if message}}
  <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
  <button>Create account</button>
  <p class="account mesaage">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>